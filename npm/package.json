{
  "name": "open-tools",
  "version": "0.0.3",
  "description": "Collection of open source tools",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/codinasion/open-tools",
  "keywords": [
    "open-tools",
    "typescript"
  ],
  "author": "harshraj8843",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json --maxWorkers=50%",
    "check": "yarn lint && yarn format && yarn build && yarn test",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn run check",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.4"
  }
}
